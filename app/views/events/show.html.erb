<div class="container">
<div class="show-wrapper">
  <div class="row row-adjustment">
    <div class="col-md-7 image-event"  style="background-image: linear-gradient(-225deg, #101010 0%, rgba(0,36,61,0.5) 0%), url('<%= cl_image_path(@event.photo) %>'); background-size: cover">
      &nbsp;
    </div>
    <div class="col-md-5 col-adjustment">
      <div class="header-event">
        <p class="date-event"> <%= @event.start_date.to_formatted_s(:long_ordinal) %> - <%= @event.end_date.to_formatted_s(:long_ordinal) %> </p>
        <h1><span><%= @event.title.truncate(22, omission: '', separator: /,?\.* +/)%></span></h1>

      </div>
    </div>
  </div>
</div>
</div>

<div class="wrapper">
  <div class="container container-margin-top">
    <div class="flex-desc">
      <div class="event-desc">
        <h4>DETAILS</h4>
        <p><b>About the event:</b> <%= @event.description %></p>

        <p><b>Address:</b>  <%= @event.address.split(",").third%><%= @event.address.split(",").fourth%><%= @event.address.split(",").last%></p>
        <div class="price">
          <p>Price</p>
          <p><%= @event.price.split(",").first %></p>
        </div>






              <div class="bucket-event-page">

                  <%= link_to  list_events_path(list_event: {list_event: @event.id}), class: "bucket-image", method: :post, remote: true do %>
                    <%= image_tag("bucket.png") %>
                  <% end %>

                  <%= social_share_button_tag(@event.title, :allow_sites => %w(twitter facebook google_plus tumblr pinterest)) %>
              </div>
                <div class="link-show">
               <p><%= link_to "To the Website", @event.link, target: "_blank", class: "btn-show" %></p>
                  <p><%= link_to "Back to Search", search_path, class: "btn-show" %></p>
                </div>
              <div class="share-container">
                <div class="share-twitter">

                </div>
              </div>

          </div>
        </div>
  </div>


    </div>
  </div>


</div>
<div class= "container container-map">
  <div class="responsive">
    <div id="map"
         style="width: 100%;
             height: 400px;"
         data-markers="<%= @markers.to_json %>">
    </div>
  </div>
</div>
