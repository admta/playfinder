<div class="container">
  <div class="card margin-top">
    <%= image_tag @event.photo, class: "margin-top" %>

      <div class="events-show-form">
        <%= link_to list_events_path(list_event: {list_event: @event.id}), class: "empty-bucket", method: :post do %>
          <%= image_tag("empty-bucket.png") %>
        <% end %>
      </div>


  </div>
</div>

<div class="container description-container">
  <div class="info-title text-center">

  <h1><%= @event.title %></h1>
  </div>
  <p>Address:<%= @event.address.split(",").third%><%= @event.address.split(",").fourth%><%= @event.address.split(",").last%></p>
  <p><%= @event.start_date.strftime("From %d-%m-%Y") %><%= @event.end_date.strftime(" until %d-%m-%Y") %></p>
  <p><%= @event.price.split(",").first %> <%= @event.description %>
  </p>
  <p><%= link_to "Check their website for more info", @event.link, :target => "_blank" %></p>

</div>

<div class= "container">
  <div class="responsive">
    <div id="map"
    style="width: 100%;
    height: 400px;"
    data-markers="<%= @markers.to_json %>">
    </div>
  </div>
</div>
<div class="text-center">
  <%= link_to "Keep on searching", search_path , class: "btn-links" %>
  <%= link_to "Home", root_path , class: "btn-links" %>
</div>
