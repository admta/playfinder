<div class= event-show-card>
<div class= container>
  <div class="card margin-top" style="background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.8)), url('<%= @event.photo %>');">
<div class="description">
  <div <%= @event.title %> ></div>
    <h1><%= @event.title %></h1>



<p>Address:<%= @event.address.split(",").third%><%= @event.address.split(",").fourth%><%= @event.address.split(",").last%></p>
<p>From <%= @event.start_date %> until <%= @event.end_date %></p>
<p><%= @event.price.split(",").first%> <%= @event.description %>
</p>

</div>
</div>
<div class="events-form">
<%= simple_form_for (@list_event) do |f| %>
  <%= f.hidden_field :list_event, :value => @event.id  %>
  <%= f.submit value: "Add to your BucketList", class: "btn btn-primary btn-lg button" %>
  <% end %>
  </div>
  </div>
</div>
</div>
<div>
<div class= container>
<%= link_to "Go back", events_path%>
</div>
</div>
<div class= container>
<div class="responsive">
<div id="map"
  style="width: 100%;
  height: 400px;"
  data-markers="<%= @markers.to_json %>">
</div>
</div>
</div>
