<div class="banner banner-home" style="background-image: linear-gradient(-225deg, #101010 0%, rgba(0,36,61,0.5) 0%), url('https://images.unsplash.com/photo-1500995617113-cf789362a3e1?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=63cce1cefae4f19979bb3b0e51edf13d&auto=format&fit=crop&w=1350&q=80');">
  <div class="banner-content">
    <h1>PLAYFINDER</h1>
    <p>Find your kid's next adventure</p>
    <%= form_tag '/search', method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control home-form",
        placeholder: "where?"
      %>
    <% end %>
  </div>
</div>

