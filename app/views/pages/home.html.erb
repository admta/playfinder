        <%= text_field_tag :query,
            params[:query],
            class: "form-control home-form",
            placeholder: "where?" %>
      <% end %>
    <a href="#" class="recommended">
      <div class="text-center">
        <div class="arrow"><%= image_tag "arrow.png" %></div>
      </div>
    </a>
  </div>
</div>

