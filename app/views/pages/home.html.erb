        <h3>Become a PlaneLord</h3>
        <p>Just pick the one suits your needs, and our system will take care of everything you need.<br>We do our best to keep it simple!</p>

      </div>
    </div>
  </div>
  </div>


<div class="card-container">
    <h3>Events coming</h3>
  <div class="row card-row">
    <% @events.each do |event| %>

        <div class="col-sm-4">
          <div class="card-wrapper">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= event.photo %>');">
            </div>
              <div class="card-description">
                <h2><%= event.title %></h2>

              </div>
          </div>
        </div>

    <% end %>
  </div>
</div>
</div>
