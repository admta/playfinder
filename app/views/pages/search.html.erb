<div class="responsive">
<div id="map"
  style="width: 100%;
  height: 400px;"
  data-markers="<%= @markers.to_json %>">
</div>

<div class="cards-container">
    <%= form_tag places_path, method: :get, :id => "search_form" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search for activity"
      %>
      <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search button',:name => nil%>
    <% end %>

<div class="search-list">
  <% @places.each do |place| %>
  <div class="row">
    <%= link_to place_path(place) do %>
      <div class="col-xs-12 col-sm-4">
        <div class="place-picture" style="background-image: url(<%= asset_path place.photo %>) ">
       </div>
      </div>

       <div class="col-xs-12 col-sm-8" style="border: 2px solid #113a5d">
        <div class= place-decpription>
         <h2><%= place.title %></h2>
      <% end %>
        <p><%= place.category %></p>
        <p><%= place.address %></p>
        </div>
      </div>
     </div>
  <% end %>
</div>

  <div class="footer">
    <div class="footer-copyright">
      Enjoy your day! <i class="fas fa-place"></i>
    </div>
  </div>
</div>

